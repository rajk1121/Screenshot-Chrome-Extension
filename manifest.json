{
    "name": "Screenshot Extension",
    "version": "1.0",
    "description": "Building a screenshot taking extension",
    "background": {
        "scripts": [
            "script.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "camera.png",
        "default_title": "Take screen shot!",
        "default_popup": "page.html"
    },
    "permissions": [
        "activeTab"
    ],
    "manifest_version": 2
}